@page
@model IndexModel
@{
    ViewData["Title"] = "Main Page";
}

<div class="justify-content-center">
    <form class="pt-3" id="shortenUrlForm">
        @Html.AntiForgeryToken()

        <div class="row justify-content-center form-group">
            <div class="col-md-8 input-group">
                <input id="shorten-url" taborder="1" name="url" type="url" class="form-control form-control-lg"
                       placeholder="The link to shorten" value="" autocomplete="off" autocorrect="off" autocapitalize="off">
                <input id="shorten-btn" type="submit" class="input-group-append btn btn-primary btn-large shorten-button" value="Shorten">
            </div>
        </div>

    </form>

    <div class="row justify-content-center">
        <div class="col-md-8 short-url" id="result">

        </div>
    </div>

</div>

@section scripts{
    <script>
        $(document).ready(function () {

            $('#shortenUrlForm').on('submit', function (evt) {
                if (!this.checkValidity()) {
                    evt.preventDefault();
                    evt.stopPropagation();
                    return;
                }

                evt.preventDefault();

                $(this).addClass('was-validated');

                var obj = {};
                obj.url = $("#shorten-url").val();

                $.ajax({
                    url: "/api/shortenUrl",
                    type: "POST",
                    data: JSON.stringify(obj),
                    contentType: "application/json",
                    //dataType: "json",
                    beforeSend: function (xhr) {
                        xhr.setRequestHeader("MY-XSRF-TOKEN",
                            $('input:hidden[name="__RequestVerificationToken"]').val());
                    }
                })
                    .done(function (data) {
                        var url = document.location.origin + "/" + data.shortUrl;
                        $("#result").append('<div class="card"><div class="card-header"><span><strong>' + data.longUrl + '</strong></span></div><div class="card-body"><a href=' + url + '>' + url + '</a></div></div>');
                    })
                    .fail(function (xhr) {
                        $("#result").html("Error shortening url. Please try again.");
                    });
            });

        });
    </script>
}