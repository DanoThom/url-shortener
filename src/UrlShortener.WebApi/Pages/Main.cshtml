@page
@model IndexModel

<div class="justify-content-center">
    <form class="pt-3" id="shortenUrlForm">
        @Html.AntiForgeryToken()

        <div class="row justify-content-center form-group">
            <div class="col-md-8 input-group">
                <input id="shorten-url" taborder="1" name="url" type="url" class="form-control form-control-lg"
                       placeholder="The link to shorten" value="" autocomplete="off" autocorrect="off" autocapitalize="off">
                <input id="shorten-btn" type="submit" class="input-group-append btn btn-primary btn-large shorten-button" value="Shorten">
            </div>
        </div>

    </form>
    <div class="row justify-content-center">
        <span class="col-md-8 text-danger" id="msg">

        </span>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-8 short-url" id="result">

        </div>
    </div>

</div>
